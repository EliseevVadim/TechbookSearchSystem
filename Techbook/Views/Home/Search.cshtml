@model SearchResultViewModel

@{
    ViewData["Title"] = "Результаты поиска";
}

<p class="mt-3">
    <a href="/" class="back-link">На главную</a>
</p>
<h2 class="search-results-header">Найдено результатов: @Model.ResultsFound</h2>
<ul class="mb-5">
    @foreach (var article in @Model.Articles)
    {
        <div class="row">
            <div class="col s12 m-3 m6">
                <div class="card">
                    <div class="card-image">
                        @if (!string.IsNullOrEmpty(article.ImagePath))
                        {
                            <img src="@article.ImagePath" alt="Article Image" class="article-image">
                        }
                        <h5 class="article-title">@article.Title</h5>
                    </div>
                    <div class="card-content p-3">
                        <p class="article-description">@Html.Raw(article.Description)</p>
                        <p class="article-content">@Html.Raw(article.Content)</p>
                    </div>
                    <div class="card-action mb-3">
                        <a href="@article.Link" class="more">Подробнее...</a>
                        <span class="right">@article.PublishingDate.ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
    }
</ul>
